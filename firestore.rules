rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // SEASONS COLLECTION
    // Server stores seed here - clients can only READ
    // ============================================
    match /seasons/{seasonId} {
      // Authenticated users can read season info
      // NOTE: seed field should be excluded in client queries (use security rules or field mask)
      allow read: if request.auth != null;
      
      // NEVER allow client writes - Admin SDK only
      allow write: if false;
    }
    
    // ============================================
    // LEADERBOARD COLLECTION  
    // Server writes verified scores - clients can only READ
    // ============================================
    match /leaderboard/{seasonId} {
      // Anyone can read leaderboard (for public display)
      allow read: if true;
      
      // NEVER allow client writes - Admin SDK only
      allow write: if false;
      
      // Entries subcollection
      match /entries/{entryId} {
        allow read: if true;
        allow write: if false;
      }
      
      // Snapshot document (top50 cached)
      match /snapshot/{snapshotId} {
        allow read: if true;
        allow write: if false;
      }
    }
    
    // ============================================
    // USER PROFILES (Optional - for display names)
    // Users can only read/write their own profile
    // ============================================
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ============================================
    // RATE LIMITING COLLECTION (Server-Side)
    // Tracks submission attempts per user
    // ============================================
    match /rateLimits/{userId} {
      // Only server can read/write
      allow read: if false;
      allow write: if false;
    }
    
    // ============================================
    // DEFAULT DENY
    // Any collection not explicitly matched is denied
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
